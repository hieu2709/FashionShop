<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator"
        app:layout_constraintBottom_toBottomOf="@id/viewpager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        app:ci_drawable="@drawable/bg_indicator"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

       <RadioGroup
           app:layout_constraintTop_toBottomOf="@id/viewpager"
           app:layout_constraintLeft_toLeftOf="parent"
           android:layout_marginTop="20dp"
           android:id="@+id/radio_group"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <RadioButton
               android:id="@+id/selectAll"
               android:text="Tất cả"
               android:checked="true"
               android:background="@drawable/bg_radio_custom"
               android:button="@color/trans"
               android:textColor="@drawable/radio_text_color"
               android:layout_marginRight="15dp"
               android:paddingVertical="6dp"
               android:paddingHorizontal="15dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <RadioButton
               android:id="@+id/selectAo"
               android:text="Áo"
               android:background="@drawable/bg_radio_custom"
               android:button="@color/trans"
               android:textColor="@drawable/radio_text_color"
               android:layout_marginRight="15dp"
               android:paddingVertical="6dp"
               android:paddingHorizontal="15dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <RadioButton
               android:id="@+id/selectQuan"
               android:text="Quần"
               android:background="@drawable/bg_radio_custom"
               android:button="@color/trans"
               android:textColor="@drawable/radio_text_color"
               android:layout_marginRight="15dp"
               android:paddingVertical="6dp"
               android:paddingHorizontal="15dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RadioGroup>
    <ImageButton
        android:id="@+id/btnSearch"
        app:layout_constraintTop_toTopOf="@+id/radio_group"
        app:layout_constraintBottom_toBottomOf="@id/radio_group"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bg_radio_custom"
        android:src="@drawable/ic_search_active"
        android:paddingVertical="6dp"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        app:layout_constraintTop_toBottomOf="@id/radio_group"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>